<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex justify-content-center w-100 ms-auto">
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto w-100 d-flex justify-content-center">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "mx-4 nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to root_path, class: "navbar-brand" do %>
              <h1 class="text-center mb-0">Travely</h1>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "mx-2 nav-link" %>
          </li>
          <li class="avatar-photo nav-item dropdown">
            <%= link_to user_path(current_user.id) do %>
              <%= image_tag "mateus.png", class: "avatar", alt: "dropdown menu" %>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
