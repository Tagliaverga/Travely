<div class="container">
  <%= simple_form_for [@user, @service] do |f| %>
  <%= f.input :profession, as: :select,
            collection: [ 'Fotographer', 'Tourist Gruide', 'Translator', 'Driver', 'Dog Walker', 'Dog Siter'] %>
  <%= f.input :local %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.button :submit, class:"btn btn-input mt-2" %>
<% end %>
</div>
