<h1 class="d-flex justify-content-center m-4 bebas-neue-regular">Documents</h1>
<div class="container d-flex align-items-center justify-content-between m-4">
  <div class="cards-grid">
    <% @documents.each do |document| %>
      <div class="cardb p-4">
        <div class=" mb-4">
          <p><strong>Description:</strong> <%= document.description %></p>
          <p><strong>Price: </strong> <%= document.price %>/

        </div>

        <div class="mb-2">
          <% if document.photo.key.present? %>
          <%= cl_image_tag document.photo.key, height: 360, class: "img-card-index", crop: :fill%>
          <% else %>
          <%= image_tag "default.png", height: 360, class: "img-card-index", crop: :fill%>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container">
  <%= link_to "Add a documents", new_itinerary_document_path(@itinerary), class: "btn btn-ghost mb-2" %>
  <%= link_to "Back", user_path(current_user), class: "btn-login btn btn-ghost roboto-regular mx-2" %>
</div>


